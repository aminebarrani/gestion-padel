<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ajoutercategorie" stylesheets="@style.css">
   <!-- Navigation Bar -->
   <HBox spacing="10" layoutX="14.0" layoutY="10.0" styleClass="nav-bar">
      <Button text="Categories" onAction="#goToCategoryList" styleClass="nav-button"/>
      <Button text="Product List" onAction="#goToProductList" styleClass="nav-button"/>
      <Button text="Add Product" onAction="#goToAddProduct" styleClass="nav-button"/>
   </HBox>

   <!-- Category Form -->
   <VBox layoutX="20" layoutY="100" spacing="10" styleClass="form-container">
      <TextField fx:id="nomCategorie" promptText="Category Name" style="-fx-pref-width: 300px;"/>
      <TextField fx:id="description" promptText="Description" style="-fx-pref-width: 300px;"/>
      <Button layoutX="63.0" layoutY="140.0" onAction="#save" text="Save" styleClass="button"/>
   </VBox>
</AnchorPane>
